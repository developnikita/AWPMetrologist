<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Windows.UI.Xaml.Media"
    xmlns:local="using:AWPMetrologist.Themes">
    <Style x:Key="PageBackground" 
           TargetType="Panel" >
        <Setter Property="Background" 
                Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
    </Style>

    <SolidColorBrush x:Key="MTCScrubberBarTextBrush" 
                     Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="HeaderColor" 
                     Color="{ThemeResource SystemAccentColor}" />

    <media:AcrylicBrush x:Key="bgAcrylicBrushHome"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="#FFCFCFCF"/>

    <Style x:Key="HomePageBackground" 
           TargetType="Panel">
        <Setter Property="Background" 
                Value="{StaticResource bgAcrylicBrushHome}"/>
    </Style>
</ResourceDictionary>
