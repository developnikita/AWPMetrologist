<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:AWPMetrologist.Client.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="StackPanelMargin">0,8,36,0</Thickness>
    
    <Style x:Key="InputFieldLabel" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="{StaticResource LabelFontSize}" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="0,4,8,4" />
    </Style>

    <Style x:Key="InputField" TargetType="controls:DockPanel">
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
</ResourceDictionary>
