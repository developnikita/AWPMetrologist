<Page
    x:Class="AWPMetrologist.Client.Views.AccountingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:AWPMetrologist.Client.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="Учёт СИ"
                   FontWeight="Light"
                   Style="{StaticResource PageTitleStyle}"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" 
                       Grid.ColumnSpan="2"
                       Text="Заводские данные" 
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
            
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Vertical"
                        Margin="{StaticResource EightTopMargin}">
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Тип СИ"/>
                    <TextBox />
                </controls:DockPanel>
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Наименование СИ"/>
                    <TextBox />
                </controls:DockPanel>
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Категория"/>
                    <!-- TODO: Drop down list -->
                    <TextBox />
                </controls:DockPanel>
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Единица измерения"/>
                    <!-- TODO: Drop down list -->
                    <TextBox />
                </controls:DockPanel>
                
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Класс точности"/>
                    <muxc:NumberBox SpinButtonPlacementMode="Compact" />
                </controls:DockPanel>
                
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Нижний предел"/>
                    <TextBox />
                </controls:DockPanel>
                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Верхний предел"/>
                    <TextBox />
                </controls:DockPanel>

                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Погрешность"/>
                    <muxc:NumberBox SpinButtonPlacementMode="Compact" />
                </controls:DockPanel>

                <controls:DockPanel>
                    <TextBlock controls:DockPanel.Dock="Left" 
                               Text="Завод-изготовитель"/>
                    <TextBox />
                </controls:DockPanel>

            </StackPanel>

        </Grid>
    </Grid>
</Page>
